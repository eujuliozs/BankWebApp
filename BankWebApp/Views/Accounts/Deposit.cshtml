@model BankWebApp.Models.TransactionRecord
<h2></h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Deposit">

            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Logged">
                        <div class="form-group row">
                            <label asp-for="Amount" class="form-control-plaintext"></label>
                            <input asp-for="Amount" />
                        </div>

                        <div class="form-group row">
                            <label asp-for="Account.Password" class="form-control-plaintext"></label>
                            <input asp-for="Account.Password" />
                        </div>
                        <hr />
                        <div class="form-group row">
                            <input type="submit" value="Confirmar" class="btn btn-dark" />
                        </div>
                    </form>
                </div>
            </div>
        </form>
    </div>
</div>

