@model BankWebApp.Models.ViewModel.LoginForm
<h2>Login</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Logged">
            <div class="form-group row">
                <label asp-for="AccNumber" class="form-control-plaintext"></label>
                <input asp-for="AccNumber"/>
            </div>

            <div class="form-group row">
                <label  asp-for="Password" class="form-control-plaintext"></label>
                <input asp-for="Password"/>
            </div>

            <hr />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-dark" />
                <input type="hidden" asp-action="Logged" asp-route-id=""/>
            </div>
        </form>
    </div>
</div>
