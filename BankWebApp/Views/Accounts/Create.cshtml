@model BankWebApp.Models.Owner
<h2>Create Your Account</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div class="form-group row">
                <label asp-for="Name" class="form-control-plaintext"></label>
                <input asp-for="Name" />
            </div>

            <div class="form-group row">
                <label asp-for="BirthDate" class="form-control-plaintext"></label>
                <input asp-for="BirthDate" />
            </div>

            <div class="form-group row">
                <label asp-for="Cpf" class="form-control-plaintext"></label>
                <input asp-for="Cpf" />
            </div>

            <div class="form-group row">
                <h4>Agora escolha uma senha!</h4>
                <label asp-for="Account.Password" class="form-control-plaintext"></label>
                <input asp-for="Account.Password" />
            </div>

            <hr />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-dark" />
              <!--  <input type="hidden" asp-for="Model.Account"/>
            </div>

        </form>
    </div>
</div>
