@model Account
<h2>Create Your Account</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group row">
                <label asp-for="Holder" class="form-control-plaintext"></label>
                <input asp-for="Holder" />
                <span asp-validation-for="Holder" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="HolderBirthDate" class="form-control-plaintext"></label>
                <input asp-for="HolderBirthDate" />
                <span asp-validation-for="HolderBirthDate" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="form-control-plaintext"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <h4>Create a Password!</h4>
                <label asp-for="Password" class="form-control-plaintext"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            

            <hr />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-dark" />
             </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

