@model BankWebApp.Models.ViewModel.AccountFormViewModel
<h2>Create Your Account</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div class="form-group row">
                <label asp-for="Owner.Name" class="form-control-plaintext"></label>
                <input asp-for="Owner.Name" />
            </div>

            <div class="form-group row">
                <label asp-for="Owner.BirthDate" class="form-control-plaintext"></label>
                <input asp-for="Owner.BirthDate" />
            </div>

            <div class="form-group row">
                <label asp-for="Owner.Cpf" class="form-control-plaintext"></label>
                <input asp-for="Owner.Cpf" />
            </div>

            <div class="form-group row">
                <h4>Agora escolha uma senha!</h4>
                <label asp-for="Account.Password" class="form-control-plaintext"></label>
                <input asp-for="Account.Password" />
            </div>

            <hr />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>
